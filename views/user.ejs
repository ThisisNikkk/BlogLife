<%-include("partials/header.ejs") %>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% blogs.forEach(blog => { %>
            <div class="col">
                <div class="card shadow-sm">
                    <img src="/img/<%= blog.image %>" class="card-img-top" width="100%" height="225" alt="<%= blog.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= blog.title %></h5>
                        <p class="card-text"><%= blog.content ? blog.content.substring(0, 100) : '' %>...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-dark">Read More</button>
                            </div>
                            <small class="text-muted"><%= blog.author %></small>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%-include("partials/footer.ejs") %>